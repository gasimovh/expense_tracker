<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane style="-fx-background-color: #54595D;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatisticsController">
   <center>
      <Pane fx:id="pane" BorderPane.alignment="CENTER">
         <children>
            <PieChart fx:id="chart" />
         </children>
      </Pane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#daily" prefWidth="60.0" styleClass="buttonStyle" stylesheets="@mycss.css" text="Daily">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="35.0" layoutY="30.0" mnemonicParsing="false" onAction="#graph" prefWidth="60.0" styleClass="buttonStyle" stylesheets="@mycss.css" text="Graph">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="25.0" top="20.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
